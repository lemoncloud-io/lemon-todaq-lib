{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "plugins": [
            { 
              "transform": "ts-transformer-keys/transformer"
            }
        ],
        "incremental": true,
        "declaration": true
    },
    "exclude": [ "node_modules", "dist"]
}
